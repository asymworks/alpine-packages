# Contributor: Katie Holly <holly@fuslvz.ws>
# Contributor: Konstantin Kulikov <k.kulikov2@gmail.com>
# Contributor: Jonathan Krauss <jkrauss@asymworks.com>
# Maintainer: Jonathan Krauss <jkrauss@asymworks.com>
pkgname=telegraf
pkgver=1.20.4
pkgrel=0
_commit=6a94f65a # git rev-parse --short HEAD
_branch=release-${pkgver%.*}
pkgdesc="A plugin-driven server agent for collecting & reporting metrics, part of the InfluxDB project"
url="https://www.influxdata.com/time-series-platform/telegraf/"
arch="x86_64 aarch64 armhf armv7"
license="MIT"
makedepends="go binutils-gold linux-headers"
install="$pkgname.pre-install"
subpackages="$pkgname-openrc"
options="net"
source="telegraf-$pkgver.tar.gz::https://github.com/influxdata/telegraf/archive/v$pkgver.tar.gz
	tests-internal-rotate-slow-for-docker.patch
	tests-internal-slow-for-docker.patch
	tests-plugins-reverse-dns-ignore-result.patch
	telegraf.initd
	telegraf.confd
	"

export GOPATH=$startdir/cache/go
export GOCACHE=$startdir/cache/go-build
export GOTMPDIR=$srcdir

build() {
	local ldflags="-X main.version=$pkgver -X main.branch=$_branch -X main.commit=$_commit"
	go build -modcacherw -ldflags "$ldflags" ./cmd/telegraf
}

check() {
	# filecount tests are excluded because they depend on exact file sizes
	# which depend on filesystem used.
	# statsd and exec tests are excluded because they fail on Docker
	local pkgs="$(go list -modcacherw ./... | grep -Ev '(plugins/(inputs/(filecount|statsd))|(processors/execd))')"
	go test -modcacherw -short $pkgs
}

package() {
	install -Dm755 "$srcdir/$pkgname.initd" "$pkgdir/etc/init.d/$pkgname"
	install -Dm644 "$srcdir/$pkgname.confd" "$pkgdir/etc/conf.d/$pkgname"
	install -Dm755 "$builddir/$pkgname" "$pkgdir/usr/bin/$pkgname"
	install -Dm644 "$builddir/etc/$pkgname.conf" "$pkgdir/etc/$pkgname.conf"
	install -dm755 "$pkgdir/etc/$pkgname.conf.d"
}

