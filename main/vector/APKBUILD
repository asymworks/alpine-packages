# Contributor: Hoang Nguyen <folliekazetani@protonmail.com>
# Contributor: Jonathan Krauss <jkrauss@asymworks.com>
# Maintainer: Jonathan Krauss <jkrauss@asymworks.com>
pkgname=vector
pkgver=0.47.0
pkgrel=2
pkgdesc="High-performance observability data pipeline"
url="https://vector.dev/"
arch="x86_64 aarch64 armhf armv7"
license="MPL-2.0"
makedepends="
	cargo
	cargo-auditable
	cmake
	librdkafka-dev
	openssl-dev
	perl
	protobuf-dev
	protoc
	python3
	sccache
	zlib-ng-dev
	zstd-dev
	"
checkdepends="bash cargo-nextest tzdata"
subpackages="$pkgname-doc $pkgname-openrc $pkgname-slim"
source="
	$pkgname-$pkgver.tar.gz::https://github.com/vectordotdev/vector/archive/refs/tags/v$pkgver.tar.gz
	use-system-libs.patch
	add-slim-target.patch
	vector.initd
	vector.confd
	logrotate
	"

export OPENSSL_NO_VENDOR=1

# Use sccache to cache dependencies
export RUSTC_WRAPPER=sccache
export SCCACHE_DIR=$startdir/cache

prepare() {
	default_prepare

	# Rust target triple.
	local target=$(rustc -vV | sed -n 's/host: //p')

	# Build against system-provided zlib-ng
	mkdir -p .cargo
	cat >> .cargo/config.toml <<-EOF
		[target.$target]
		z-ng = { rustc-link-lib = ["z-ng"], rustc-cfg = ["zng"] }
	EOF

	# "cargo auditable build" still tries to pull dependencies for other platforms
	cargo fetch --locked
}

build() {
	echo "Cache directory: ${SCCACHE_DIR}"

	cargo auditable build \
		--release \
		--frozen \
		--no-default-features \
		--features default-musl,component-validation-runner

	cargo auditable build \
		--release \
		--frozen \
		--no-default-features \
		--features default-musl-slim,component-validation-runner \
		--target-dir slim

	# cargo-nextest drops the release build, so back it up here
	cp -r target/release releasebuild
}

check() {
	# Upstream recommends running tests with "cargo nextest" instead of "cargo test"
	cargo nextest run \
		--fail-fast \
		--frozen \
		--no-default-features \
		--offline \
		--release \
		--workspace \
		--test-threads num-cpus
}

package() {
	install -Dm755 releasebuild/vector -t "$pkgdir"/usr/bin/
	install -Dm644 config/vector.yaml -t "$pkgdir"/etc/vector/
	install -Dm644 "$srcdir"/logrotate "$pkgdir"/etc/logrotate.d/vector

	mkdir -p "$pkgdir"/usr/share/doc/vector
	cp -r config/examples "$pkgdir"/usr/share/doc/vector/examples

	install -Dm755 "$srcdir"/vector.initd "$pkgdir"/etc/init.d/vector
	install -Dm644 "$srcdir"/vector.confd "$pkgdir"/etc/conf.d/vector
}

slim() {
	pkgdesc="Slim version of $pkgname for embedded systems"
	replaces="vector"

	ls -la $builddir
	ls -la $builddir/slim

	install -Dm755 "$builddir"/slim/release/vector -t "$subpkgdir"/usr/bin/
	install -Dm644 "$builddir"/config/vector.yaml -t "$subpkgdir"/etc/vector/
	install -Dm644 "$srcdir"/logrotate "$subpkgdir"/etc/logrotate.d/vector
}

