# Contributor: Jonathan Krauss <jkrauss@asymworks.com>
# Maintainer: Jonathan Krauss <jkrauss@asymworks.com>
pkgname=asymworks-ca
pkgver=1.0.0
pkgrel=0
pkgdesc="Asymworks Certification Authority Root Certificates"
url="https://pki.asymworks.net"
arch="noarch"
license="MIT"
# Requirements for tests are not available in main
options="!check"
install="asymworks-ca.post-install"
source="root-ca.crt
    identity-ca.crt
    network-ca.crt
    "

package() {
    install -Dm0644 "$srcdir/root-ca.crt" "$pkgdir/etc/ssl/certs/Asymworks_Root_CA.crt"
	install -Dm0644 "$srcdir/identity-ca.crt" "$pkgdir/etc/ssl/certs/Asymworks_Identity_CA.crt"
    install -Dm0644 "$srcdir/network-ca.crt" "$pkgdir/etc/ssl/certs/Asymworks_Network_CA.crt"
}

